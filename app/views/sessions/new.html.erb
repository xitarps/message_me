<h2 class="ui center aligned large header">
  <%= t(:login_h2).capitalize %>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  <%= t(:login_h4).capitalize %>
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">

      <%= form_with model: @user, url: login_path, class: "ui form", local: true do |f| %>
        <div class="field">
          <%= f.label :username, t(:how_call_user).capitalize %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: t(:how_call_user).capitalize %>
            <i class="user icon"></i>
          </div>
        </div>


        <div class="field">
          <%= f.label :password, t(:password).capitalize %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: t(:password).capitalize %>
            <i class="lock icon"></i>
          </div>
        </div>


        <%= f.submit t(:log_in).capitalize, class: "ui orange submit button" %>
      <% end %>

    </div>
    <div class="middle aligned column invisible_if_mobile">
      <a href="<%= signup_path %>">
        <div class="ui big orange button">
          <i class="signup icon"></i>
          <%= t(:sign_up).capitalize %>
        </div>
      </a>
    </div>
  </div>
  <div class="ui vertical divider invisible_if_mobile">
    <%= t(:or).capitalize %>
  </div>
</div>